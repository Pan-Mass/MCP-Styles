        }
      },
      "sassVariables": {
        "$pmc-blue": "#3D5B7E",
        "$pmc-gold": "#FCCF81",
        "$pmc-teal": "#6BB0AF",
        "$base-color": "$pmc-blue",
        "$base-foreground-color": "dynamic($base-light-color)",
        "$reverse-background-color": "dynamic(#39A1F4)",
        "$accent-color": "dynamic($pmc-teal)",
        "$accent-light-color": "dynamic($pmc-gold)",
        "$accent-dark-color": "dynamic(#101010)"
      }
    }
  },
  "shared": {
    "cssVariables": {
      "--background": "#fcfbfc",
      "--foreground": "#ffffff"
    },
    "dynamicVariables": {
      "--theme-primary": "Set dynamically based on event (pmc/unpaved/wintercycle)",
      "--theme-secondary": "Set dynamically based on event (pmc/unpaved/wintercycle)"
    }
  },
  "cssRules": {
    "buttons": {
      "padding": {
        "desktop": "0.75rem 1.25rem",
        "mobile": "0.5rem 0.8rem",
        "css": "padding: 0.75rem 1.25rem;"
      },
      "borderRadius": {
        "value": "6px",
        "css": "border-radius: 6px;"
      },
      "fontWeight": {
        "value": "600",
        "css": "font-weight: 600;"
      },
      "minWidth": {
        "desktop": "80px",
        "mobile": "60px",
        "css": "min-width: 80px;"
      },
      "transition": {
        "value": "all 0.2s ease",
        "css": "transition: all 0.2s ease;"
      },
      "hover": {
        "transform": "translateY(-2px)",
        "css": "transform: translateY(-2px);"
      },
      "color": {
        "value": "white",
        "css": "color: white;"
      },
      "cursor": {
        "value": "pointer",
        "css": "cursor: pointer;"
      }
    },
    "cards": {
      "borderRadius": {
        "value": "8px",
        "css": "border-radius: 8px;"
      },
      "boxShadow": {
        "value": "0 8px 16px rgba(0, 0, 0, 0.1)",
        "css": "box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);"
      },
      "border": {
        "value": "1px solid #dcdcdc",
        "css": "border: 1px solid #dcdcdc;"
      },
      "padding": {
        "desktop": "2rem",
        "tablet": "20px",
        "mobile": "15px",
        "css": "padding: 2rem;"
      },
      "backgroundColor": {
        "value": "#ffffff",
        "css": "background-color: #ffffff;"
      }
    },
    "modals": {
      "borderRadius": {
        "value": "12px",
        "css": "border-radius: 12px;"
      },
      "boxShadow": {
        "value": "0 10px 30px rgba(0, 0, 0, 0.15)",
        "css": "box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);"
      },
      "background": {
        "value": "white",
        "css": "background: white;"
      },
      "overlay": {
        "standard": "rgba(0, 0, 0, 0.5)",
        "photo": "rgba(0, 0, 0, 0.9)",
        "css": "background: rgba(0, 0, 0, 0.5);"
      }
    },
    "spacing": {
      "scale": {
        "values": [0, 4, 8, 12, 16, 24, 32, 48, 64, 96, 128],
        "units": "px"
      },
      "gap": {
        "small": {
          "value": "0.4rem - 0.5rem",
          "css": "gap: 0.5rem;"
        },
        "medium": {
          "value": "0.75rem",
          "css": "gap: 0.75rem;"
        },
        "large": {
          "value": "1rem - 1.5rem",
          "css": "gap: 1.5rem;"
        }
      }
    },
    "typography": {
      "title": {
        "desktop": "1.5rem",
        "css": "font-size: 1.5rem;"
      },
      "subtitle": {
        "value": "0.8rem - 0.85rem",
        "css": "font-size: 0.85rem;"
      },
      "body": {
        "desktop": "1rem",
        "mobile": "0.85rem - 0.9rem",
        "css": "font-size: 1rem;"
      },
      "small": {
        "value": "0.8rem - 0.85rem",
        "css": "font-size: 0.85rem;"
      },
      "lineHeight": {
        "value": "1.5",
        "css": "line-height: 1.5;"
      },
      "letterSpacing": {
        "normal": "normal",
        "tight": "0.3px",
        "wide": "0.5px"
      }
    },
    "mediaQueries": {
      "mobile": "@media (max-width: 480px)",
      "tablet": "@media (max-width: 600px)",
      "desktop": "@media (max-width: 768px)",
      "large": "@media (min-width: 1024px)"
    },
    "contrast": {
      "minTextContrast": 4.5,
      "minUIContrast": 3.0
    },
    "accessibility": {
      "focusVisible": {
        "css": "outline: 2px solid currentColor; outline-offset: 2px;"
      },
      "fontSmoothing": {
        "webkit": "-webkit-font-smoothing: antialiased;",
        "moz": "-moz-osx-font-smoothing: grayscale;"
      }
    }
  },
  "usage": {
    "colors": {
      "primary": "Use var(--theme-primary) or brand-specific variables for buttons, links, active states",
      "secondary": "Use var(--theme-secondary) or brand-specific variables for supporting elements",
      "danger": "Use danger colors for destructive actions only"
    },
    "implementation": "Apply CSS variables dynamically based on event context. Reference --theme-primary and --theme-secondary for event-specific styling."
  }
}
