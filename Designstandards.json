          "--admin-pmc-teal": "#6BB0AF",
          "--admin-base": "#3D5B7E",
          "--admin-base-foreground": "dynamic",
          "--admin-reverse-bg": "#39A1F4",
          "--admin-accent": "#6BB0AF",
          "--admin-accent-light": "#FCCF81",
          "--admin-accent-dark": "#101010",
